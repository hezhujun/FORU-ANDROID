<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <TextView
                android:textSize="18sp"
                android:id="@+id/addressee"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="何柱君"
                android:textColor="#414141"
                />

            <TextView
                android:textSize="15sp"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#414141"
                android:text="18932442453" />
        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="湖南省长沙市天心区文源街道韶山南路68号中南大学铁道学院" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_item_edit_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/address_item_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_item_delete_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/address_item_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>